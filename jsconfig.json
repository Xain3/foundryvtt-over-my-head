{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
        "@docker/*": ["docker/*"],
      "@config": ["src/config/config.js"],
      "@constants": ["src/config/constants.js"],
      "@manifest": ["src/config/manifest.js"],
      "@configFolder/*": ["src/config/*"],
      "@contexts/*": ["src/contexts/*"],
      "@data/*": ["src/data/*"],
      "@handlers/*": ["src/handlers/*"],
      "@utils/*": ["src/utils/*"],
      "@listeners/*": ["src/listeners/*"],
      "@maps/*": ["src/maps/*"],
      "@helpers/*": ["src/helpers/*"],
      "@configHelpers/*": ["src/config/helpers/*"],
      "@validator": ["src/utils/static/validator.js"],
      "@integrationTests/*": ["tests/integration/*"],
      "@mocks/*": ["tests/mocks/*"],
      "@module": ["module.json"],
    }
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules", "dist", "release", "coverage"]
}