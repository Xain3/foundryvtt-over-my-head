{
  "name": "foundryvtt-over-my-head",
  "version": "0.1.0",
  "description": "A Foundry VTT module to enhance the user interface and experience.",
  "main": "dist/index.js",
  "type": "module",
  "author": "Andrea Pandolfo",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-json": "^6.1.0",
    "@types/estree": "^1.0.8",
    "@types/node": "^24.5.2",
    "@types/sinon": "^17.0.4",
    "@types/sizzle": "^2.3.10",
    "@vitest/coverage-v8": "^3.2.4",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "csslint": "^1.0.5",
    "cypress": "^15.0.0",
    "eslint": "^9.36.0",
    "glob": "^11.0.3",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "jsonc-parser": "^3.3.1",
    "lcov": "^1.16.0",
    "lint-staged": "^16.2.0",
    "markdownlint-cli": "^0.45.0",
    "minimatch": "^10.0.3",
    "mock-fs": "^5.5.0",
    "prettier": "^3.0.0",
    "secretlint": "^11.2.4",
    "semver": "^7.3.8",
    "vite": "^7.1.1",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "dayjs": "^1.11.13",
    "ini": "^5.0.0",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21"
  },
  "scripts": {
    "dev": "node ./.dev/scripts/deployment/buildAndDeploy.mjs",
    "build": "vite build",
    "build:prod": "NODE_ENV=production vite build",
    "prerelease": "npm run test && npm run build:prod",
    "release": "npm run prerelease && git add dist/ && git commit -m 'Build artifacts'",
    "test": "vitest run --coverage --project unit --project integration --project setup --project performance --project smoke",
    "test:all": "vitest run --project unit --project integration --project setup --project performance --project smoke",
    "test:unit": "vitest run --project unit",
    "test:integration": "vitest run --project integration",
    "test:setup": "vitest run --project setup",
    "test:performance": "vitest run --project performance",
    "test:smoke": "vitest run --project smoke",
    "test:functional": "echo 'Functional tests not configured' && exit 0",
    "test:watch": "vitest --project unit",
    "test:watch:integration": "vitest --project integration",
    "test:watch:setup": "vitest --project setup",
    "test:watch:performance": "vitest --project performance",
    "test:watch:smoke": "vitest --project smoke",
    "test:watch:functional": "echo 'Functional tests cannot be run in watch mode' && exit 0",
    "lint": ".dev/scripts/utilities/lint-wrapper.sh",
    "format": ".dev/scripts/utilities/format-wrapper.sh",
    "lint:md": "markdownlint '**/*.md' --ignore-path .markdownlintignore",
    "format:md": "prettier --write '**/*.md' '!node_modules/**'",
    "format:json": "prettier --write '**/*.json' '!node_modules/**'",
    "spellcheck": "cspell '**/*.md' '**/*.txt' '!node_modules/**'",
    "prepare": "husky",
    "precommit": "lint-staged",
    "run-foundry": "node main.js --dataPath=$HOME/foundrydata",
    "validate:container-config": "node ./.dev/scripts/validation/validate-container-config.mjs"
  },
  "lint-staged": {
    "*.{js,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
